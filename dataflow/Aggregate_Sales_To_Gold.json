{
	"name": "Aggregate_Sales_To_Gold",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "dsdessert4Allsilver",
						"type": "DatasetReference"
					},
					"name": "Dessert4All"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "AzureSynapseAnalyticsTable4",
						"type": "DatasetReference"
					},
					"name": "Dessert4Allsink"
				}
			],
			"transformations": [
				{
					"name": "Dessert4Allaggregate"
				}
			],
			"scriptLines": [
				"source(output(",
				"          SalesMonth as string,",
				"          Retailer as string,",
				"          Product as string,",
				"          SalesValueUSD as string,",
				"          UnitsSold as string,",
				"          Revenue as float",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'parquet') ~> Dessert4All",
				"Dessert4All aggregate(groupBy(Product),",
				"     TotalRevenuePerProduct = round(sum(toFloat(SalesValueUSD) * toInteger(UnitsSold)), 2)\r",
				") ~> Dessert4Allaggregate",
				"Dessert4Allaggregate sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     staged: false,",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> Dessert4Allsink"
			]
		}
	}
}